<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Bidding"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <!-- First Product Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Product Image -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tomato_img"
                        android:contentDescription="Fresh Tomatoes" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:layout_gravity="end"
                        android:layout_margin="8dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bidding Ends In:"
                            android:textColor="#333333"
                            android:textSize="12sp"/>
                            
                        <TextView
                            android:id="@+id/tomato_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:25"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#F44336"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </FrameLayout>

                <!-- Product Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Product Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fresh Tomatoes"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Product Info -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity: 100kg"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Farmer: Farmer John"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Base Price: ₹45/kg"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- Bid Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F9F9F9"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Current Bid:"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹52/kg"
                            android:textStyle="bold"
                            android:textColor="#333333"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F9F9F9"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Your Bid:"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tomato_your_bid_text"
                            android:text="None/kg"
                            android:textStyle="bold"
                            android:textColor="#333333"/>
                    </LinearLayout>

                    <!-- Bid Form -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Place Your Bid (₹/kg)"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/tomato_bid_input"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="3"
                            android:inputType="numberDecimal"
                            android:hint="Enter bid amount"
                            android:background="@android:drawable/edit_text"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColorHint="#757575"/>

                        <Button
                            android:id="@+id/tomato_bid_button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Bid"
                            android:textColor="@android:color/white"
                            android:backgroundTint="#1a237e"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Second Product Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Product Image -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/weat_img"
                        android:contentDescription="Organic Wheat" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:layout_gravity="end"
                        android:layout_margin="8dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bidding Ends In:"
                            android:textColor="#333333"
                            android:textSize="12sp"/>
                            
                        <TextView
                            android:id="@+id/wheat_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:25"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#F44336"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </FrameLayout>

                <!-- Product Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Product Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Organic Wheat"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <!-- Product Info -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity: 500kg"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Farmer: Farmer John"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Base Price: ₹30/kg"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- Bid Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F9F9F9"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Current Bid:"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹38/kg"
                            android:textStyle="bold"
                            android:textColor="#333333"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#F9F9F9"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Your Bid:"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/wheat_your_bid_text"
                            android:text="None/kg"
                            android:textStyle="bold"
                            android:textColor="#333333"/>
                    </LinearLayout>

                    <!-- Bid Form -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Place Your Bid (₹/kg)"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/wheat_bid_input"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="3"
                            android:inputType="numberDecimal"
                            android:hint="Enter bid amount"
                            android:background="@android:drawable/edit_text"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColorHint="#757575"/>

                        <Button
                            android:id="@+id/wheat_bid_button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Bid"
                            android:textColor="@android:color/white"
                            android:backgroundTint="#1a237e"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView> 